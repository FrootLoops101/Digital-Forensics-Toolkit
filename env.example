# Digital Forensics Toolkit Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3000
NODE_ENV=production
HOST=0.0.0.0
CORS_ORIGIN=http://localhost:3000
TRUST_PROXY=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-at-least-32-characters-long
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here-make-it-exactly-32-chars
ENCRYPTION_ALGORITHM=aes-256-gcm

# Session Management
SESSION_SECRET=your-session-secret-key-here-make-it-strong-and-random
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict
SESSION_MAX_AGE=86400000

# Password Policy
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true
PASSWORD_HISTORY_SIZE=5

# Multi-Factor Authentication
MFA_ENABLED=true
MFA_ISSUER=Digital Forensics Toolkit
MFA_ALGORITHM=SHA1
MFA_DIGITS=6
MFA_PERIOD=30

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_PATH=./data/forensics.db
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_FREQUENCY=24
DATABASE_BACKUP_RETENTION=30
DATABASE_BACKUP_PATH=./backups
DATABASE_MAX_CONNECTIONS=10
DATABASE_CONNECTION_TIMEOUT=30000
DATABASE_QUERY_TIMEOUT=60000

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis-password
REDIS_DB=0
REDIS_KEY_PREFIX=forensics:
REDIS_TTL=86400

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/forensics.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_FORMAT=json
LOG_COLORIZE=false
LOG_LEVEL_CONSOLE=info
LOG_LEVEL_FILE=error

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=100MB
UPLOAD_PATH=./uploads
TEMP_PATH=./temp
ALLOWED_FILE_TYPES=image/*,application/pdf,text/*,application/zip,application/x-zip-compressed
BLOCKED_FILE_TYPES=application/x-executable,application/x-msdownload,application/x-msi
FILE_SCAN_ENABLED=true
FILE_SCAN_TIMEOUT=30000

# =============================================================================
# RATE LIMITING & SECURITY
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
RATE_LIMIT_SKIP_FAILED_REQUESTS=false

# Brute Force Protection
BRUTE_FORCE_ENABLED=true
BRUTE_FORCE_MAX_ATTEMPTS=5
BRUTE_FORCE_LOCKOUT_DURATION=900000
BRUTE_FORCE_RESET_AFTER=3600000

# Input Validation
INPUT_VALIDATION_ENABLED=true
SQL_INJECTION_PROTECTION=true
XSS_PROTECTION=true
CSRF_PROTECTION=true
SSRF_PROTECTION=true

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=Digital Forensics Toolkit <noreply@your-org.com>
SMTP_REPLY_TO=support@your-org.com

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
NOTIFICATIONS_ENABLED=true
NOTIFICATION_EMAIL_ENABLED=false
NOTIFICATION_SMS_ENABLED=false
NOTIFICATION_WEBHOOK_ENABLED=false
NOTIFICATION_WEBHOOK_URL=https://your-webhook-url.com/notifications

# =============================================================================
# FORENSIC ANALYSIS CONFIGURATION
# =============================================================================
ANALYSIS_TIMEOUT=300000
ANALYSIS_MAX_CONCURRENT=5
ANALYSIS_RESULT_RETENTION_DAYS=365
ANALYSIS_LOG_LEVEL=debug

# Hash Algorithms
HASH_ALGORITHMS=md5,sha1,sha256,sha512
HASH_BATCH_SIZE=100
HASH_VERIFICATION_ENABLED=true

# OCR Configuration
OCR_ENABLED=true
OCR_LANGUAGES=eng
OCR_TIMEOUT=60000
OCR_MAX_FILE_SIZE=50MB

# Image Processing
IMAGE_PROCESSING_ENABLED=true
IMAGE_MAX_DIMENSIONS=4096x4096
IMAGE_QUALITY=85
IMAGE_FORMATS=jpeg,png,webp

# =============================================================================
# REPORTING CONFIGURATION
# =============================================================================
REPORT_TEMPLATE_PATH=./templates/reports
REPORT_OUTPUT_PATH=./reports
REPORT_FORMATS=pdf,html,json
REPORT_RETENTION_DAYS=2555
REPORT_AUTO_GENERATION=false

# =============================================================================
# CHAIN OF CUSTODY CONFIGURATION
# =============================================================================
CUSTODY_AUDIT_ENABLED=true
CUSTODY_SIGNATURE_REQUIRED=true
CUSTODY_INTEGRITY_CHECK_ENABLED=true
CUSTODY_TIMESTAMP_FORMAT=ISO8601
CUSTODY_RETENTION_DAYS=2555

# =============================================================================
# COMPLIANCE CONFIGURATION
# =============================================================================
COMPLIANCE_NIST_ENABLED=true
COMPLIANCE_ISO27037_ENABLED=true
COMPLIANCE_AUDIT_ENABLED=true
COMPLIANCE_REPORTING_ENABLED=true
COMPLIANCE_CHECK_FREQUENCY=24

# =============================================================================
# MONITORING & HEALTH CHECKS
# =============================================================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
METRICS_ENABLED=true
METRICS_PORT=9090

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
BACKUP_ENABLED=true
BACKUP_FREQUENCY=24
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true
BACKUP_ENCRYPTION=true
BACKUP_NOTIFICATION_ENABLED=true

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Only set these in development/testing environments
DEBUG=false
TESTING=false
MOCK_DATA_ENABLED=false
FAKE_ANALYSIS_ENABLED=false

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================
# VirusTotal Integration
VIRUSTOTAL_API_KEY=your-virustotal-api-key
VIRUSTOTAL_ENABLED=false
VIRUSTOTAL_RATE_LIMIT=4

# YARA Rules
YARA_RULES_ENABLED=false
YARA_RULES_PATH=./rules/yara
YARA_SCAN_TIMEOUT=60000

# Volatility Integration
VOLATILITY_ENABLED=false
VOLATILITY_PATH=/usr/local/bin/volatility
VOLATILITY_PROFILE_PATH=./profiles

# =============================================================================
# ADVANCED SECURITY
# =============================================================================
# Certificate Pinning
CERT_PINNING_ENABLED=false
CERT_PINNING_HASHES=sha256/AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA=

# Security Headers
SECURITY_HEADERS_ENABLED=true
SECURITY_HEADERS_HSTS_MAX_AGE=31536000
SECURITY_HEADERS_HSTS_INCLUDE_SUBDOMAINS=true
SECURITY_HEADERS_HSTS_PRELOAD=true
SECURITY_HEADERS_CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline';

# =============================================================================
# PERFORMANCE & SCALING
# =============================================================================
CLUSTER_ENABLED=false
CLUSTER_WORKERS=4
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# =============================================================================
# INTERNATIONALIZATION
# =============================================================================
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,es,fr,de
TIMEZONE=UTC
DATE_FORMAT=YYYY-MM-DD
TIME_FORMAT=HH:mm:ss

# =============================================================================
# LEGAL & COMPLIANCE
# =============================================================================
ORGANIZATION_NAME=Your Organization
ORGANIZATION_ADDRESS=123 Main St, City, State, ZIP
ORGANIZATION_EMAIL=legal@your-org.com
ORGANIZATION_PHONE=+1-555-123-4567
LEGAL_DISCLAIMER=This tool is for legitimate forensic investigations only.
COMPLIANCE_OFFICER=compliance@your-org.com
